@import 'nib'
cred=#c66
cgreen=#6c6
cyellow=#cc6

pl-color=lighten(#444, 20%)

::-webkit-input-placeholder
    color pl-color
:-moz-placeholder 
    color pl-color
::-moz-placeholder 
    color pl-color
:-ms-input-placeholder
    color pl-color

global-reset()

body
  width 100%
  max-width 500px
  margin 20px auto
  font-family 'Helvetica Neue', Helvetica, Arial, sans-serif
  font-weight 200
  font-size 16px
  color #aaa
  background #151515
  padding-bottom 50px

.container
  clearfix()
  for w in 10 20 25 33 50 66 75 100
    .w{w}
      width w*1%
      float left

.clearfix
  clearfix()

.center 
  text-align center

.red
  color cred

.yellow
  color cyellow

.green
  color cgreen

h1
  font-size 40px
  margin 10px 0

.input-box 
  padding 0
  border 0
  margin 0 auto
  text-align center
  margin 5px
  input 
    width 100%
    border 1px solid #777
    padding 5px 0
    margin 0
    text-align center
    font-size 20px
    background: #888
    color #444
    border-radius 1px

.submit-button
  font-size 22px
  border-radius 1px
  border 1px solid #777
  margin 10px
  background #888
  &:enabled
    background: cgreen

#status 
  position fixed
  bottom -100px
  left 0
  width 100%
  transition 0.3s
  font-size: 20px
  padding: 20px 0
  color #444
  &.status-visible
    bottom 0 
  &.status-confirm
    background cgreen
  &.status-warn
    background cyellow
  &.status-error
    background cred

#list-pane
  margin-top 50px
.list-item 
  margin: 10px auto
  padding: 10px
  background #444
  border-radius 2px

